<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_min"
        android:layout_width="5dp"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:rotation="180"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="60dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/v_hour"
        android:layout_width="5dp"
        android:layout_height="80dp"
        android:background="@android:color/black"
        android:rotation="255"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="255"
        app:layout_constraintCircleRadius="40dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="25sp"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="150dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>